"use client";

import { useState, useEffect, useRef } from "react";
import {
  FiMenu,
  FiInstagram,
  FiGithub,
  FiHome,
  FiUser,
  FiMail,
  FiX,
} from "react-icons/fi";
import {
  VscChromeMinimize,
  VscChromeClose,
} from "react-icons/vsc";
import {
  FaArrowRight,
  FaLinkedin,
} from "react-icons/fa";
import { CiSearch } from "react-icons/ci";
import { AiOutlineLaptop } from "react-icons/ai";
import { FaXTwitter } from "react-icons/fa6";
import { motion, AnimatePresence } from "framer-motion";

const ROUTE_COLORS = {
  "/": "#8fff86", // Home - Green
  "/projects": "#fa9595", // Projects - Pink/Red
  "/about": "#86d4ff", // About - Blue
  "/contact": "#ffd886", // Contact - Yellow/Orange
};

export default function Home() {
  const [currentTime, setCurrentTime] = useState(
    new Date().toLocaleTimeString()
  );
  const [isNavOpen, setIsNavOpen] = useState(false);
  const [hovered, setHovered] = useState(false);
  const scrollContainerRef = useRef(null);
  const [currentRoute, setCurrentRoute] = useState("/");

  const accentColor = ROUTE_COLORS[currentRoute];

  const navigateTo = (route) => {
    setCurrentRoute(route);
    setIsNavOpen(false);
    if (scrollContainerRef.current) {
      scrollContainerRef.current.scrollTop = 0;
    }
  };

  const container = {
    hidden: {},
    visible: {
      transition: { staggerChildren: 0.08, delayChildren: 0.1 },
    },
  };


  
  const letter = {
    hidden: { opacity: 0, y: 20 },
    visible: { opacity: 1, y: 0, transition: { duration: 0.3 } },
  };

  const renderText = (node, keyPrefix = "") => {
    if (typeof node === "string") {
      return node.split("").map((char, i) => (
        <motion.span
          key={`${keyPrefix}-${i}`}
          variants={letter}
          className="inline-block"
        >
          {char === " " ? "\u00A0" : char}
        </motion.span>
      ));
    }

    if (Array.isArray(node)) {
      return node.map((child, i) => renderText(child, `${keyPrefix}-${i}`));
    }

    if (typeof node === "object" && node !== null && "props" in node) {
      const element = node;
      return (
        <element.type key={keyPrefix} {...element.props}>
          {renderText(element.props.children, keyPrefix + "-child")}
        </element.type>
      );
    }

    return node;
  };

  const toggleNav = () => setIsNavOpen(!isNavOpen);

  useEffect(() => {
    const interval = setInterval(() => {
      setCurrentTime(
        new Date().toLocaleTimeString([], {
          hour: "2-digit",
          minute: "2-digit",
          hour12: false,
        })
      );
    }, 1000);

    return () => {
      clearInterval(interval);
    };
  }, []);

  // Lenis Smooth Scroll Setup
  useEffect(() => {
    let lenis;

    const initLenis = async () => {
      const Lenis = (await import("@studio-freight/lenis")).default;

      lenis = new Lenis({
        wrapper: scrollContainerRef.current,
        content: scrollContainerRef.current,
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        orientation: "vertical",
        gestureOrientation: "vertical",
        smoothWheel: true,
        wheelMultiplier: 1,
        smoothTouch: false,
        touchMultiplier: 2,
        infinite: false,
      });

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    };

    initLenis();

    return () => {
      if (lenis) {
        lenis.destroy();
      }
    };
  }, []);

  const renderPage = () => {
    switch (currentRoute) {
      case "/":
        return (
          <div className="flex flex-col items-center justify-center min-h-screen px-4">
            <div className="text-center">
              <h1 className="text-6xl md:text-8xl font-bold mb-6">
                Home Page
              </h1>
              <p className="text-xl md:text-2xl text-gray-400 mb-8">
                This is the home component - Replace with HeroBody
              </p>
            </div>
          </div>
        );
      case "/projects":
        return (
          <div className="flex flex-col items-center justify-center min-h-screen px-4">
            <div className="text-center">
              <h1 className="text-6xl md:text-8xl font-bold mb-6">
                Projects Page
              </h1>
              <p className="text-xl md:text-2xl text-gray-400 mb-8">
                This is the projects component - Replace with your Projects component
              </p>
            </div>
          </div>
        );
      case "/about":
        return (
          <div className="flex flex-col items-center justify-center min-h-screen px-4">
            <div className="text-center">
              <h1 className="text-6xl md:text-8xl font-bold mb-6">
                About Page
              </h1>
              <p className="text-xl md:text-2xl text-gray-400 mb-8">
                This is the about component - Replace with your About component
              </p>
            </div>
          </div>
        );
      case "/contact":
        return (
          <div className="flex flex-col items-center justify-center min-h-screen px-4">
            <div className="text-center">
              <h1 className="text-6xl md:text-8xl font-bold mb-6">
                Contact Page
              </h1>
              <p className="text-xl md:text-2xl text-gray-400 mb-8">
                This is the contact component - Replace with your Contact component
              </p>
            </div>
          </div>
        );
      default:
        return (
          <div className="flex flex-col items-center justify-center min-h-screen px-4">
            <div className="text-center">
              <h1 className="text-6xl md:text-8xl font-bold mb-6">
                Home Page
              </h1>
              <p className="text-xl md:text-2xl text-gray-400 mb-8">
                This is the home component - Replace with HeroBody
              </p>
            </div>
          </div>
        );
    }
  };

  return (
    <div className="flex flex-col w-[97%] md:w-[99%] my-2 h-[98dvh] overflow-hidden text-white border border-[#494949] relative z-40 rounded selection:bg-[#8fff86] selection:text-white">
      <style>{`
        @keyframes crazy1 {
          0%, 100% { transform: rotate(-45deg) scale(1); }
          50% { transform: rotate(-45deg) scale(1.3); }
        }
        @keyframes crazy2 {
          0%, 100% { transform: rotate(30deg) scale(1); }
          50% { transform: rotate(30deg) scale(1.2); }
        }
        @keyframes crazy3 {
          0%, 100% { transform: rotate(45deg) scale(1); }
          50% { transform: rotate(45deg) scale(1.3); }
        }
        .animate-crazy1 { animation: crazy1 0.5s ease-in-out infinite; }
        .animate-crazy2 { animation: crazy2 0.5s ease-in-out infinite; }
        .animate-crazy3 { animation: crazy3 0.5s ease-in-out infinite; }
      `}</style>

      {/* Header */}
      <header className="flex justify-between filter glossy-25 backdrop-blur-2xl items-center h-10 pr-2 border-b border-[#6462628c] shrink-0">
        <div className="flex w-[12%] border-r border-[#494949] md:w-[3.15%] h-full justify-center items-center group overflow-hidden">
          <div className="rotate-90 gap-[1px] flex items-center transition-transform duration-500 ease-in-out group-hover:rotate-[450deg]">
            <span className="w-2 h-2 border-t-4 border-l-4 border-white rotate-[-45deg] animate-none group-hover:animate-crazy1 group-hover:border-[#8fff86]" />
            <span className="w-1 h-3 bg-white rotate-[30deg] rounded-full animate-none group-hover:animate-crazy2 group-hover:bg-[#8fff86]" />
            <span className="w-2 h-2 border-t-4 border-r-4 border-white rotate-[45deg] animate-none group-hover:animate-crazy3 group-hover:border-[#8fff86]" />
          </div>
        </div>

        <div className="flex text-lg items-center">
          <span className="tracking-tighter font-medium text-center fonts">
            matthew
            <span className="text-[#8fff86]">&#123;ameh&#125;</span>
          </span>
        </div>

        <div className="hidden md:flex items-center space-x-2">
          <VscChromeMinimize className="text-base text-[#494949] hover:text-white transition-colors cursor-pointer" />
          <div className="w-2.5 h-2.5 border border-[#494949] rounded-sm hover:border-white transition-all duration-500 cursor-pointer" />
          <VscChromeClose className="text-base text-[#494949] hover:text-white transition-colors cursor-pointer" />
        </div>

        <div className="flex md:hidden items-center">
          {isNavOpen ? (
            <FiX className="text-lg cursor-pointer" onClick={toggleNav} />
          ) : (
            <FiMenu className="text-lg cursor-pointer" onClick={toggleNav} />
          )}
        </div>
      </header>

      {/* Mobile Navigation */}
      <AnimatePresence>
        {isNavOpen && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black bg-opacity-95 z-50 flex flex-col items-center justify-center md:hidden"
          >
            <button
              onClick={() => setIsNavOpen(false)}
              className="absolute top-4 right-4 text-2xl"
            >
              <FiX />
            </button>
            <nav className="flex flex-col space-y-8 text-2xl">
              <button
                onClick={() => navigateTo('/')}
                className="flex items-center gap-3 transition-all"
              >
                <FiHome className={currentRoute === '/' ? 'text-white' : 'text-[#9D9D9D]'} /> 
                <span className={currentRoute === '/' ? 'text-white' : 'text-[#9D9D9D]'}>Home</span>
              </button>
              <button
                onClick={() => navigateTo('/projects')}
                className="flex items-center gap-3 transition-all"
              >
                <AiOutlineLaptop className={currentRoute === '/projects' ? 'text-white' : 'text-[#9D9D9D]'} /> 
                <span className={currentRoute === '/projects' ? 'text-white' : 'text-[#9D9D9D]'}>Projects</span>
              </button>
              <button
                onClick={() => navigateTo('/about')}
                className="flex items-center gap-3 transition-all"
              >
                <FiUser className={currentRoute === '/about' ? 'text-white' : 'text-[#9D9D9D]'} /> 
                <span className={currentRoute === '/about' ? 'text-white' : 'text-[#9D9D9D]'}>About</span>
              </button>
              <button
                onClick={() => navigateTo('/contact')}
                className="flex items-center gap-3 transition-all"
              >
                <FiMail className={currentRoute === '/contact' ? 'text-white' : 'text-[#9D9D9D]'} /> 
                <span className={currentRoute === '/contact' ? 'text-white' : 'text-[#9D9D9D]'}>Contact</span>
              </button>
            </nav>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Main Content */}
      <div className="flex flex-1 min-h-0 relative">
        {/* Sidebar */}
        <aside className="hidden md:flex md:flex-col md:items-center tracking-tight glossy-25 backdrop-blur-2xl md:justify-center md:space-y-4 md:border-r md:border-[#6462628c] md:w-[3.1%] md:absolute md:left-0 md:top-0 md:bottom-0 md:z-10">
          <div className="icon-container">
            <button onClick={() => navigateTo('/')}>
              <FiHome className={`text-base hover:text-[#8fff86] cursor-pointer transition-colors ${currentRoute === '/' ? 'text-white' : 'text-[#9D9D9D]'}`} />
            </button>
            <span className="badge">home</span>
          </div>
          <div className="icon-container">
            <button onClick={() => navigateTo('/projects')}>
              <AiOutlineLaptop className={`text-base hover:text-[#8fff86] cursor-pointer transition-colors ${currentRoute === '/projects' ? 'text-white' : 'text-[#9D9D9D]'}`} />
            </button>
            <span className="badge">projects</span>
          </div>
          <div className="icon-container">
            <button onClick={() => navigateTo('/about')}>
              <FiUser className={`text-base hover:text-[#8fff86] cursor-pointer transition-colors ${currentRoute === '/about' ? 'text-white' : 'text-[#9D9D9D]'}`} />
            </button>
            <span className="badge">about</span>
          </div>
          <div className="icon-container">
            <button onClick={() => navigateTo('/contact')}>
              <FiMail className={`text-base hover:text-[#8fff86] cursor-pointer transition-colors ${currentRoute === '/contact' ? 'text-white' : 'text-[#9D9D9D]'}`} />
            </button>
            <span className="badge">contact</span>
          </div>
        </aside>

        {/* Main Content Area */}
        <div
          ref={scrollContainerRef}
          className="flex-1 md:pl-[3.1%] relative scrollbar overflow-x-hidden overflow-y-auto"
        >
          <AnimatePresence mode="wait">
            <motion.div
              key={currentRoute}
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              exit={{ opacity: 0, y: -20 }}
              transition={{ duration: 0.3 }}
            >
              {renderPage()}
            </motion.div>
          </AnimatePresence>
        </div>
      </div>

      <footer className="flex glossy-25 h-10 w-full justify-between items-center border-t border-[#494949] text-gray-600 relative shrink-0">
        <div className="w-[12%] md:w-[3.1%] h-full bg-[#508A4C] flex items-center justify-center border-r border-[#494949] shrink-0">
          <div className="relative flex items-center justify-center">
            <CiSearch className="text-black text-xl" />
          </div>
        </div>

        <div className="hidden md:flex absolute scale-[1.02] left-[51%] transform -translate-x-1/2 space-x-5 text-sm items-baseline">
          <motion.div
            className="tracking-tighter text-[#9D9D9D] cursor-default flex items-baseline"
            initial="rest"
            whileHover="hover"
          >
            <motion.span
              className="inline-block tracking-[-1px] whitespace-nowrap"
              variants={{
                rest: { x: 0 },
                hover: { x: -2 },
              }}
              transition={{ duration: 0.3 }}
            >
              Based in{" "}
              <motion.span
                variants={{
                  rest: { color: "#9D9D9D" },
                  hover: { color: "#ffffff" },
                }}
                transition={{ duration: 0.3, ease: "easeOut" }}
                className="transition-colors duration-300"
              >
                Nigeria
              </motion.span>
            </motion.span>

            <motion.span
              className="text-[8px] tracking-wide poppins inline-block ml-1"
              variants={{
                rest: { opacity: 0, width: 0 },
                hover: { opacity: 1, width: "auto" },
              }}
              transition={{ duration: 0.3 }}
            >
              NG
            </motion.span>
          </motion.div>

          <motion.div
            className="tracking-[-1px] text-[#9D9D9D] cursor-default flex items-baseline"
            initial="rest"
            whileHover="hover"
          >
            <motion.span
              className="inline-block whitespace-nowrap"
              variants={{
                rest: { x: 0 },
                hover: { x: -3 },
              }}
              transition={{ duration: 0.3 }}
            >
              Localtime{" "}
              <motion.span
                className="time font-[600] mx-1 whitespace-nowrap"
                variants={{
                  rest: { color: "#9D9D9D" },
                  hover: { color: "#ffffff" },
                }}
                transition={{ duration: 0.4, ease: "easeInOut" }}
              >
                {currentTime}
              </motion.span>
            </motion.span>

            <motion.span
              className="text-[14px] inline-block"
              variants={{
                rest: { opacity: 0, width: 0 },
                hover: { opacity: 1, width: "auto" },
              }}
              transition={{ duration: 0.3 }}
            >
              {(() => {
                const hour = new Date().getHours();
                return hour >= 6 && hour < 18 ? "â˜€ï¸" : "ðŸŒ™";
              })()}
            </motion.span>
          </motion.div>
        </div>

        <div className="flex md:hidden text-[#9D9D9D] flex-1 justify-end items-center space-x-3 min-w-0 px-2">
          <FaLinkedin className="text-base hover:text-white cursor-pointer hover:scale-105 transition-all" />
          <FiInstagram className="text-base hover:text-white cursor-pointer hover:scale-105 transition-all" />
          <FiGithub className="text-base hover:text-white cursor-pointer hover:scale-105 transition-all" />
          <FaXTwitter className="text-base hover:text-white cursor-pointer hover:scale-105 transition-all" />
        </div>

        <button
          onMouseEnter={() => setHovered(true)}
          onMouseLeave={() => setHovered(false)}
          onClick={() => navigateTo('/contact')}
          className="hidden material-bubble3 md:block md:w-4/12 lg:w-[14%] py-[4px] lg:px-1 text-[14px] mr-3 rounded-md border-[0.5px] hover:border-[#8eff86] border-[#6462628c] bg-[#0a0a0afb] text-center transition-all"
        >
          {hovered ? (
            <motion.p
              className="flex items-center justify-center tracking-[-1px]"
              variants={container}
              initial="hidden"
              animate={hovered ? "visible" : "hidden"}
            >
              {renderText("let's-get-in-touch")}
              <FaArrowRight className="ml-1" />
            </motion.p>
          ) : (
            <p className="flex items-center text-white justify-center tracking-[-1px]">
              let&#39;s-get-in-touch
              <FaArrowRight className="ml-1" />
            </p>
          )}
        </button>
      </footer>
    </div>
  );
}






